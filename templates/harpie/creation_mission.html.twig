{% extends 'base.html.twig' %}
{% block title %}
  Mission Harpie
{% endblock %}
{% block headerTitle %}
  Création mission {{ typeMission }}
{% endblock %}
{% block content %}
  <main class="creation-mission">
    <form>
      <fieldset class="debut-fin">
        <legend>
          Dates
        </legend>
        {{ form_row(formFicheODE.dateDebut) }}
        {{ form_row(formFicheODE.dateFin) }}
      </fieldset>

      <fieldset class="cible">
        <legend>
          Cible
        </legend>
        {{
          form_row(
            formCible,
            {
              label: ' '
            }
          )
        }}
        <button type="button" class="btn btn-primary">
          <svg xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewbox="0 0 24 24"
            fill="none"
            stroke="#000000"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round">
            <path d="M3 3h18v18H3zM12 8v8m-4-4h8" />
          </svg>
        </button>
      </fieldset>

      <fieldset class="effectif">
        <legend>
          Effectif
        </legend>
        {{
          form_row(
            formEffectif,
            {
              label: ' '
            }
          )
        }}
        <button type="button" class="btn btn-primary">
          <svg xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewbox="0 0 24 24"
            fill="none"
            stroke="#000000"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round">
            <path d="M3 3h18v18H3zM12 8v8m-4-4h8" />
          </svg>
        </button>
        {{
          form_row(
            formEffectifPiroguier,
            {
              label: ' '
            }
          )
        }}
        <button type="button" class="btn btn-primary">
          <svg xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewbox="0 0 24 24"
            fill="none"
            stroke="#000000"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round">
            <path d="M3 3h18v18H3zM12 8v8m-4-4h8" />
          </svg>
        </button>
        <div class="total-effectif">
          <p>
            Total effectif :
          </p>
          <p></p>
        </div>
      </fieldset>

      <fieldset class="transport">
        <legend>
          Transport
        </legend>
        {{
          form_row(
            formTransport,
            {
              label: ' '
            }
          )
        }}
        <button type="button" class="btn btn-primary">
          <svg xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewbox="0 0 24 24"
            fill="none"
            stroke="#000000"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round">
            <path d="M3 3h18v18H3zM12 8v8m-4-4h8" />
          </svg>
        </button>
      </fieldset>

      <fieldset class="manoeuvre">
        <legend>
          Manoeuvre
        </legend>
        {{
          form_row(
            formManoeuvreParMission,
            {
              label: ' '
            }
          )
        }}
        <button type="button" class="btn btn-primary">
          <svg xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewbox="0 0 24 24"
            fill="none"
            stroke="#000000"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round">
            <path d="M3 3h18v18H3zM12 8v8m-4-4h8" />
          </svg>
        </button>
      </fieldset>

      <fieldset class="cadre-legal">
        <legend>
          Cadre légal
        </legend>
        {{ form_row(formFicheODE.cadreLegal) }}
        {{ form_row(formFicheODE.observation) }}
      </fieldset>

      <fieldset class="communication">
        <legend>
          Communication
        </legend>
        {{
          form_row(
            formCommunicationParMission,
            {
              label: ' '
            }
          )
        }}
        <button type="button" class="btn btn-primary">
          <svg xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewbox="0 0 24 24"
            fill="none"
            stroke="#000000"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round">
            <path d="M3 3h18v18H3zM12 8v8m-4-4h8" />
          </svg>
        </button>
      </fieldset>

      {{ form_row(formFicheODE.soumettre) }}
    </form>
  </main>
{% endblock %}
